FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

WORKDIR /app


COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt


COPY core ./core
COPY transports/telegram_bot.py ./transports/telegram_bot.py


RUN useradd -m appuser && chown -R appuser:appuser /app
USER appuser


CMD ["python", "transports/telegram_bot.py"]
